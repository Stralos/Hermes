
{
  "compilerOptions": {
    "module": "commonjs",
    "pretty": true,
    "esModuleInterop": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "paths": {
      "models/*": [ "src/models/*" ],
      "config/*": [ "config/*"],
      "repository/*": [ "src/repo/repository/*"]
    },
    "target": "es6",
    "lib": ["es6", "dom", "esnext.asynciterable"],
    "strict": true,
  },
  "include": [
      "src/**.*"
  ],
  "exclude": [
      "node_modules",
      "**/*.test.ts"
  ]
}
